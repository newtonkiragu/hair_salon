<h1>Update the <%=@stylist.name() %> stylist </h1>

  <form action="/stylists/<%= @stylist.id() %>" method="post">
    <input name="_method" type="hidden" value="patch">
    <label for="name">Rename your stylist:</label>
    <input id="name" name="name" type="text">
    <label for="phonenumber">Edit your stylist phonenumber:</label>
    <input id="phonenumber" name="phonenumber" type="text">

    <button type="submit" class="btn">Update</button>
  </form>

  <form action="/stylists/<%= @stylist.id() %>" method="post">
    <input name="_method" type="hidden" value="delete">

    <button type="submit" class="btn red">Delete stylist</button>
  </form>